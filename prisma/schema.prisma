// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Rewind {
  id       Int       @id @default(autoincrement())
  authors  String[]
  messages String[]
}

model Message {
  id        Int      @id @default(autoincrement())
  author    String
  content   String
  chatName  String
  createdAt DateTime
}
